BoxLayoutExample


<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "Button A"
        background_color: 1,0,0,1
        size_hint: .2,.2
        # horizontal positions: "x"(left),"center_x","right"
        # vertical positions: "y"(top), "center_y", "bottom"
        pos_hint: {y:}
    Button:
        text: "Button B"
        background_color: .5,.1,0,1
    Button:
        text: "Button C"
        background_color: 1,0,.2,1







<MainWidget>:
    Button:
        text: "Button A"
        size: "200dp", "300dp"
        pos: "100dp", "100dp"
        background_color: 1,0,0,1

    Label:
        text: "Label A"
